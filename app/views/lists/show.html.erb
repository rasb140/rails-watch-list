<div class="container mt-5">
  <div class="d-flex justify-content-between align-items-center mb-4">
    <h1><%= @list.name %></h1>
    <%= link_to edit_list_path(@list.id), class: 'btn btn-light btn-sm border' do %>
      <i class="fa fa-pencil"></i> Edit this list
    <% end %>
  </div>

  <hr>
  <ul id="lists">
    <% @list.movies.each do |movie| %>
      <li>
        <%= movie.title %>
        <%= movie.overview %>
        <strong>rating: &#11088;<%= movie.rating %></strong>
        <img width="200px" src="<%= movie.poster_url %>"/>
      </li>
    <% end %>
  </ul>


  <hr>
  <%= link_to lists_path do %>
    <i class="fa-solid fa-arrow-rotate-left"></i> Back to list
  <% end %>
</div>
